<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"     "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- PARAMETER/CONSTANT DEFINITIONS -->
	<constant name="struts.multipart.maxSize" value="10485760" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />

	<!-- ACTION DEFINITIONS -->
	<package name="default" extends="struts-default" namespace="/">

		<!-- Defining Tiles Plugin for this package -->
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<interceptors>
			<interceptor name="CheckSession"
				class="framework.core.custom.interceptors.CheckSession"></interceptor>
			<interceptor-stack name="CheckSession">
				<interceptor-ref name="CheckSession" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<action name="ServerTime">
			<result name="success">/pages/tiles/global/ServerTime.jsp
			</result>
		</action>

		<action name="AppLanding" class="app.actions.session.off.BeforeSession"
			method="appLanding">
			<result name="error">App.Landing</result>
			<result type="tiles" name="success">App.Landing</result>
		</action>



		<action name="Login" class="app.actions.session.off.BeforeSession"
			method="login">
			<result type="tiles" name="success">App.Login</result>
		</action>

		<action name="ProcessLogin" class="app.actions.session.off.BeforeSession"
			method="processLogin">
			<result name="success" type="redirectAction">
				<param name="actionName">UserHome</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="UserHome" class="app.actions.session.on.user.UserActions"
			method="userHome">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">User.Home</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="Home" class="app.actions.session.on.user.UserActions"
			method="execute">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="redirectAction" name="success">
				<param name="actionName">UserHome</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="Logout" class="app.actions.session.on.user.UserActions"
			method="logout">
			<result type="tiles" name="success">App.Login</result>
		</action>

		<action name="NewTicket" class="app.actions.session.on.user.UserActions"
			method="newTicket">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">User.NewTicket</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="ProcessNewTicket" class="app.actions.session.on.user.UserActions"
			method="processNewTicket">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">User.Home</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="TodayScrumUpdate" class="app.actions.session.on.user.UserActions"
			method="todayScrumUpdate">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.todayScrumUpdate</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="GetCategoryList" class="app.actions.session.on.user.UserActions"
			method="getCategoryByReportId">
			<result name="success">/pages/app/scrum/CategoryList.jsp</result>
		</action>

		<action name="GetSubCategoryList" class="app.actions.session.on.user.UserActions"
			method="getSubCategoryByCatId">
			<result name="success">/pages/app/scrum/SubCategoryList.jsp</result>
		</action>

		<action name="ProcessScrumUpdate" class="app.actions.session.on.user.UserActions"
			method="processScrumUpdate">

			<result name="success" type="redirectAction">
				<param name="actionName">TodayScrumUpdate</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>

		</action>


		<action name="TotalScrumUpdate" class="app.actions.session.on.user.UserActions"
			method="totalScrumUpdate">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.totalScrumUpdate</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="FinalScrumReport" class="app.actions.session.on.user.UserActions"
			method="finalReport">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.finalScrumReport</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="GetSrcumUpdatesListByReportId" class="app.actions.session.on.user.UserActions"
			method="getSrcumUpdatesListByReportId">
			<result name="success">/pages/app/scrum/ScrumReportById.jsp</result>
		</action>

		<action name="DeleteScrumUpdate" class="app.actions.session.on.user.UserActions"
			method="deleteScrumUpdate">

			<result name="success" type="redirectAction">
				<param name="actionName">TodayScrumUpdate</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>
		</action>

		<action name="UserList" class="app.actions.session.on.manager.ManagerActions"
			method="getUserList">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.userList</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

		<action name="UserAdd" class="app.actions.session.on.manager.ManagerActions"
			method="getUserRoleList">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.userAdd</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>


		<action name="ProcessAddUser" class="app.actions.session.on.manager.ManagerActions"
			method="processAddUser">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />

			<result name="success" type="redirectAction">
				<param name="actionName">UserList</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>

		</action>

		<action name="ProcessEditUser" class="app.actions.session.on.manager.ManagerActions"
			method="processEditUser">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />

			<result name="success" type="redirectAction">
				<param name="actionName">UserList</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>

		</action>

		<action name="DeleteUser" class="app.actions.session.on.manager.ManagerActions"
			method="deleteUser">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />

			<result name="success" type="redirectAction">
				<param name="actionName">UserList</param>
				<param name="errorMessage">${errorMessage}</param>
				<param name="actionMessage">${actionMessage}</param>
			</result>

		</action>

		<action name="EditUser" class="app.actions.session.on.manager.ManagerActions"
			method="getUserDetail">
			<interceptor-ref name="CheckSession" />
			<interceptor-ref name="params" />
			<result type="tiles" name="success">App.userEdit</result>
			<result type="tiles" name="AppLogin">App.Login</result>
		</action>

	</package>

	<include file="struts-appSetup.xml"></include>
</struts> 